<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %} Administration {% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <!-- Css & Bootstrap Start -->
    {% block stylesheets %}
        <!-- Custom CSS -->
        <link href="{{ asset('css/base.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('css/front/bootstrap-responsive.css') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
    {% endblock %}
    <!-- Css & Bootstrap End -->

    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

</head>
<body>

<!-- start Navigation bar -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle"
                data-toggle="collapse"
                data-target="#nav-content">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path('homepage') }}">Home Page</a>
    </div>

    <div class="collapse navbar-collapse" id="nav-content">
        <ul class="nav navbar-nav ">
            {% if is_granted('ROLE_SUPER_ADMIN')  %}
            <li>
                <a href="#"> Project Dashboard </a>
            </li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
                <a href="{{ path('member_index') }}"> Partenaires </a>
            </li>
            <li>
                <a href="{{ path('messenger') }}"> Messagerie </a>
            </li>
            <li>
                <a href="{{path('fos_user_profile_show' ) }}">Mon Espace</a>
            </li>
            <li>
                <form class="navbar-form navbar-right" action="">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right ">
            {% else %}
                <li>
                    <a href="{{ path('fos_user_registration_register') }}"> S'inscrire </a>
                </li>
                <li>
                    <a href="{{ path('fos_user_security_login') }}"> S'autentifier </a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
<!--end navigation bar-->

<!-- Block Start -->
<div class="container">
    <div align="center">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            {{ flashMessage }}
        {% endfor %}
    </div>

    {% block body %}{% endblock %}
    <section class="col-md-8">
        {% block content %}{% endblock %}
    </section>

    <aside class="col-md-4">
        {% block aside %}{% endblock %}
    </aside>
</div>
<!-- Block End -->

<!-- Footer Start-->
<div class="container">
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2018</p>
            </div>
        </div>
    </footer>
</div>
<!-- Footer End-->

<!-- JavaScript Start -->
{% block javascripts %}
    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}

{% block mesJavascripts %}
{%endblock%}
<!-- JavaScript End -->

</body>
</html>
