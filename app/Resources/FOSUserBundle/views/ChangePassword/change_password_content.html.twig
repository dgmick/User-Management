{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="span3">
            {% include'@User/modulesUsed/users-connect.html.twig' %}
        </div>
        <div class="span4 offset2 cards">
            <h1 align="center"> Changer mon mot de passe </h1>
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            {{ form_widget(form) }}
            <div>
                <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" />
            </div>
            {{ form_end(form) }}


        </div>
    </div>
</div>

