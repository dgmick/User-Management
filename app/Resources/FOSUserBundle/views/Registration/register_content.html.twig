{% trans_default_domain 'FOSUserBundle' %}

<div class="cards">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Inscription</h2>
        </div>
    </div>
    <section>
        <form id="register-form" action="{{ path('fos_user_registration_register') }}" method="post"  class="fos_user_registration_register">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <fieldset class="form-group has-feedback has-icon-left">
                        {{ form_row(form.firstName) }}
                    </fieldset>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <fieldset class="form-group has-feedback has-icon-left">
                        {{ form_row(form.lastName) }}
                    </fieldset>
                </div>
            </div>
            <fieldset class="form-group has-feedback has-icon-left">
                {{ form_row(form.username) }}
            </fieldset>
            <fieldset class="form-group has-feedback has-icon-left">
                {{ form_row(form.email) }}
            </fieldset>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <fieldset class="form-group has-feedback has-icon-left">
                        {{ form_row(form.Address) }}
                    </fieldset>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <fieldset class="form-group has-feedback has-icon-left">
                        {{ form_row(form.phone) }}
                    </fieldset>
                </div>
            </div>
            <fieldset class="form-group has-feedback has-icon-left">
                {{ form_row(form.Birthday) }}
            </fieldset>
            <fieldset class="form-group has-feedback has-icon-left">
                {{ form_row(form.country) }}
            </fieldset>

            <fieldset class="form-group has-feedback has-icon-left">
                {{ form_row(form.plainPassword) }}
            </fieldset>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="{{ 'layout.register'|trans }}" />
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <a class="btn btn-danger btn-lg btn-block" href="{{ path('fos_user_profile_edit') }}">{{ 'layout.login' |trans }}</a>
                </div>
            </div>
            {{ form_end(form) }}
        </form>
    </section>
</div>