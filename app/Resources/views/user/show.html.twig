{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Fiche de : <span style="color: blue">{{ user.fullName }}</span></h1>
    <table class="table table-striped">
        <tbody>
        {% if not user.imagesId is empty %}
            <img src="{{ asset('/uploads/images/' ~ user.imagesId) }}" class="img-circle" height="150"/>
        {% else %}
            <img src="{{ asset('images/imageprofil.png') }}" class="img-circle" height="150">
        {% endif %}
        <tr>
            <th>Nom</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Pr√©nom</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Date d'anniversaire</th>
            <td>{% if user.Birthday %}{{ user.Birthday|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Pays</th>
            <td>{{ user.country }}</td>
        </tr>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Telephone</th>
                <td>{{ user.phone }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            {% for roles in user.roles %}
                <td>{{ roles }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <ul>
            <li>
                {{ form_start(delete_form) }}
                <a class="btn btn-success" href="{{ path('user_index') }}">Retour a la liste</a>
                <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
                <input class="btn btn-danger" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    {% endif %}
{% endblock %}
